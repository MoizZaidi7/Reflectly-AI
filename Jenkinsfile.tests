pipeline {
    agent any

    // Trigger the pipeline on GitHub webhook push events
    triggers {
        githubPush()
    }

    stages {
        stage('Checkout Code') {
            steps {
                // Checkout the code from the GitHub repository
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Build the Docker image for running Selenium tests
                    sh 'docker build -t selenium-tests ./tests'
                }
            }
        }

        stage('Run Selenium Tests') {
            steps {
                script {
                    // Run the Docker container to execute pytest with --network host
                    sh 'docker run --rm --network host selenium-tests'
                }
            }
        }

        stage('Archive Test Results') {
            steps {
                // Archive the pytest HTML report if generated
                archiveArtifacts artifacts: 'tests/report.html', allowEmptyArchive: true
                // Also archive JUnit XML if configured
                junit 'tests/junit-report.xml'
            }
        }
    }

    post {
        always {
            script {
                emailext (
                    subject: "Build ${currentBuild.currentResult} - ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                    body: "Build Status: ${currentBuild.currentResult}\nJob: ${env.JOB_NAME}\nBuild: #${env.BUILD_NUMBER}\nURL: ${env.BUILD_URL}",
                    to: 'moizzaidi71@gmail.com',
                    from: 'moizzaidi71@gmail.com',
                    replyTo: 'moizzaidi71@gmail.com',
                    mimeType: 'text/plain'
                )
            }
        }
    }
}